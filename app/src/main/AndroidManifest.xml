<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miguele.pokefight" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.PokeListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PokeChallengerActivity"
            android:label="@string/title_activity_poke_challenger" >
        </activity>
        <activity
            android:name=".activity.PokeRegisterActivity"
            android:label="@string/title_activity_poke_register" >
        </activity>
        <activity
            android:name=".activity.BattleActivity"
            android:label="@string/title_activity_battle" >
        </activity>
    </application>

</manifest>
