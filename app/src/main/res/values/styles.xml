<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- Use the Toolbar instead of the ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryBlue500</item>
        <item name="colorPrimaryDark">@color/primaryBlue700</item>
        <item name="colorAccent">@color/accentPinkA400</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>


    <style name="ToolBarDarkOverflow" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="actionMenuTextColor">@android:color/black</item>

        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
