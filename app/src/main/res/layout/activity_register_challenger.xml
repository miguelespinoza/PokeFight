<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/challenger_et"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/challenger_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:textColor="@color/accentPinkA400"
        android:background="@drawable/md_button"
        android:layout_below="@+id/challenger_et"
        android:layout_alignEnd="@+id/challenger_et"/>


</RelativeLayout>